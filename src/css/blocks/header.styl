.header
    width 100%
    background-image url('../i/background.png')
    background-size cover
    background-repeat no-repeat


    &__video
        width 100%
        height 100vh
        min-height 600px
        overflow hidden
        position relative


    &__content
        position absolute
        width 100%
        height 100%
        min-height 600px
        top 0
        text-align center
        color white

    &__posts
        text-align left
        padding-bottom 40px

        &_content
           clear both
           padding-top 5px
           font-size 14px
           line-height 22px

        &_title
           font-size 20px
        .fa-twitter
            color blue-btn
            font-size 28px
        .text-20
            padding-top 5px


    &__logo
            float left
            margin-top -10px

    &__menu
        padding-top 48px

        &_items
            float right

        &_item
            padding-left 25px
            text-transform uppercase
            font-size 14px
            float left

    &__welcome
        display block
        width 100%

    &__mouse
        position absolute
        border 2px solid white
        border-radius 25px
        line-height 40px
        width 20px
        height 38px
        top 90vh
        left 50vw
        text-align center

    &__mouse .scroll
        border 2px solid white
        border-radius 25px
        line-height 30px
        width 0px
        height 10px
        margin-left 8px
        margin-top 15px
.animated {
  -webkit-animation-duration: 3s;
  animation-duration: 3s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}
@-webkit-keyframes bounce {
  0%, 20%, 50%, 80%, 100% {-webkit-transform: translateY(-10%);}
  40% {-webkit-transform: translateY(50%);}
}

@keyframes bounce {
  0%, 20%, 50%, 80%,  100% {transform: translateY(-10%);}
  40% {transform: translateY(50%);}
}

/*
 * Adding the animation to our element
*/
.bounce {
  -webkit-animation-name: bounce;
  animation-name: bounce;
}


